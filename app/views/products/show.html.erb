<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-lg-4 product-title"> 
    <span class="capitalize"><%= @product.name %></span><span> from <%= @product.user.company %>  
    <%= image_tag @product.image.url, class:"img-thumbnail img-responsive product-image", 
    alt:"Responsive image" %>
  </div>

  <div class="col-lg-6">
    <p>
      <strong>Price:</strong>
      <%= number_to_currency @product.price %> per <%= @product.unit %>
    </p>

    <p>
      <strong>Available:</strong>
      <%= @product.quantity %> <%= @product.unit %>s
    </p>

    <p>
      <strong>Notes:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @product.category.name %>
    </p>


    <% if current_user.id == @product.user_id %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
    <% end %>
    <%= link_to 'Back', :back %>
  
</div>
